{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "types": [
      "vue"
    ],
    "declaration": true, /* 生成相关的 '.d.ts' 文件。 */
    "declarationDir": "./dist/types", /* '.d.ts' 文件输出目录 */
    "jsx": "preserve",
  },
  "include": [
    "./**/*.*",
    "global.d.ts",
  ],
  "exclude": [
    "node_modules"
  ],
  "esModuleInterop": true,
  "allowSyntheticDefaultImports": "true"
}
